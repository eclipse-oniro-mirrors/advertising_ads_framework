  sources = [
    "src/ad_init.cpp",
    "src/ad_load_napi_common.cpp",
    "src/advertising.cpp",
  ]

  deps = [
    "${advertising_service_path}:advertising_service",
    "${advertising_common_path}:advertising_common",
    "//third_party/libuv:uv_static",
